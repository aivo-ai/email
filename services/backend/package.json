{
  "name": "@ceerion/backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:setup": "pnpm db:migrate && pnpm db:seed"
  },
  "dependencies": {
    "fastify": "^4.28.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/jwt": "^8.0.1",
    "@fastify/websocket": "^10.0.1",
    "pg": "^8.13.1",
    "redis": "^4.7.0",
    "bcrypt": "^5.1.1",
    "uuid": "^10.0.0",
    "zod": "^3.23.8",
    "@ceerion/sdk-node": "workspace:*",
    "@ceerion/email-sanitizer": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.19.4",
    "@types/pg": "^8.11.10",
    "@types/bcrypt": "^5.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.6"
  }
}
