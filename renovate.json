{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeDigest",
    ":automergeBranch"
  ],
  "timezone": "UTC",
  "schedule": ["before 6am on monday"],
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on monday"]
  },
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    },
    {
      "matchPackageNames": ["node"],
      "enabled": false
    }
  ],
  "ignoreDeps": ["node"],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 10,
  "stabilityDays": 3
}
