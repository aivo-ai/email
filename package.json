{
  "name": "@ceerion/email-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Email platform for ceerion.com",
  "engines": {
    "node": "20.19.4",
    "pnpm": ">=9.0.0"
  },
  "workspaces": [
    "apps/*",
    "services/*",
    "libs/*",
    "contracts",
    "tools"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm dev:proxy\" \"pnpm dev:branding\" \"pnpm dev:mock\" \"pnpm dev:webmail\" \"pnpm dev:admin\"",
    "dev:proxy": "pnpm --filter @ceerion/media-proxy dev",
    "dev:branding": "pnpm --filter @ceerion/branding dev",
    "dev:mock": "pnpm --filter @ceerion/jmap-mock dev",
    "dev:webmail": "pnpm --filter @ceerion/webmail dev",
    "dev:admin": "pnpm --filter @ceerion/admin-console dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:e2e": "pnpm -r test:e2e",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.6.3"
  }
}
